{% comment %}
  ============================================================
  Sección: Carrusel de Artículos de Blog Automático
  - Muestra un carrusel de artículos de un blog seleccionado
  - Los artículos se cargan automáticamente sin necesidad de bloques manuales.
  ============================================================
{% endcomment %}

<style>
  /*
    ============================================================
    Estilos CSS para la sección
    ============================================================
  */
  .blog-carousel-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    padding-left: 10px;
    padding-right: 10px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    height: auto;
  }

  .blog-carousel-container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    padding: 20px;
    height: auto;
  }

  .blog-carousel {
    display: flex;
    overflow: hidden;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    width: 100%;
    gap: {{ section.settings.gap_size }}px;
  }

  .blog-item {
    /* Ajusta el ancho de los elementos según los settings */
    flex: 0 0 calc(100% / {{ section.settings.items_desktop }} - {{ section.settings.gap_size }}px);
    min-width: calc(100% / {{ section.settings.items_desktop }} - {{ section.settings.gap_size }}px);
    scroll-snap-align: start;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    background: #fff;
    border-radius: 5px;
    box-shadow: 4px 4px 4px 4px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .blog-item:hover {
    transform: translateY(-5px);
  }

  .blog-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .blog-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 15px;
  }

  .blog-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-title {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: bold;
    margin-bottom: 10px;
    line-height: 1.4;
  }

  .blog-summary {
    font-size: {{ section.settings.summary_font_size }}px;
    line-height: 1.6;
    margin-bottom: 15px;
    color: #555;
    flex-grow: 1;
  }

  .carousel-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    cursor: pointer;
    z-index: 10;
    border-radius: 50%;
    transition: background-color 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.2);
    font-size: 1.2em;
    line-height: 1;
  }

  .carousel-button:hover {
    background-color: rgba(0, 0, 0, 0.8);
  }

  .carousel-button-prev {
    left: 10px;
  }

  .carousel-button-next {
    right: 10px;
  }

  .section-categories__heading {
    font-size: 25px;
    font-weight: bold;
    margin-bottom: 40px;
    color: #333;
    text-align: center;
  }

  @media (max-width: 991px) {
    .blog-item {
      flex: 0 0 calc(100% / {{ section.settings.items_tablet }} - {{ section.settings.gap_size }}px);
      min-width: calc(100% / {{ section.settings.items_tablet }} - {{ section.settings.gap_size }}px);
    }
  }

  @media (max-width: 768px) {
    .blog-carousel-container {
      padding: 40px;
    }

    .carousel-button {
      width: 30px;
      height: 30px;
      font-size: 1em;
    }

    .carousel-button-prev {
      left: 5px;
    }

    .carousel-button-next {
      right: 5px;
    }

    .blog-item {
      flex: 0 0 calc(100% / {{ section.settings.items_mobile }} - {{ section.settings.gap_size }}px);
      min-width: calc(100% / {{ section.settings.items_mobile }} - {{ section.settings.gap_size }}px);
    }
  }
</style>

<div class="blog-carousel-section">
  {%- assign blog = blogs[section.settings.blog_handle] -%}
  {% if section.settings.title != blank %}
    <h2 class="section-categories__heading">{{ section.settings.title }}</h2>
  {% endif %}
  <div class="blog-carousel-container">
    <button class="carousel-button carousel-button-prev">&#10094;</button>
    <div class="blog-carousel" id="blog-carousel-{{ section.id }}">
      {% if blog != blank %}
        {% for article in blog.articles %}
          <div class="blog-item">
            <a href="{{ article.url }}" class="blog-link">
              {% if article.image != blank %}
                <div class="blog-image">
                  <img src="{{ article.image | image_url: width: 600 }}" alt="{{ article.title }}">
                </div>
              {% endif %}
              <div class="blog-content">
                <h3 class="blog-title">{{ article.title }}</h3>
                <p class="blog-summary">{{ article.excerpt }}</p>
              </div>
            </a>
          </div>
        {% endfor %}
      {% else %}
        <p>Por favor, selecciona un blog para mostrar los artículos.</p>
      {% endif %}
    </div>
    <button class="carousel-button carousel-button-next">&#10095;</button>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const carouselContainer = document.getElementById('blog-carousel-{{ section.id }}');
    if (!carouselContainer) return;

    const prevButton = carouselContainer.parentElement.querySelector('.carousel-button-prev');
    const nextButton = carouselContainer.parentElement.querySelector('.carousel-button-next');
    const firstBlogItem = carouselContainer.querySelector('.blog-item');
    if (!firstBlogItem) return;

    const scrollAmount = firstBlogItem.offsetWidth;
    const gapSize = {{ section.settings.gap_size }};
    const scrollTime = {{ section.settings.carousel_interval | times: 1000 }};
    let autoScrollInterval;

    const scrollNext = () => {
      carouselContainer.scrollBy({
        left: scrollAmount + gapSize,
        behavior: 'smooth'
      });
      if (carouselContainer.scrollLeft + carouselContainer.offsetWidth >= carouselContainer.scrollWidth) {
        carouselContainer.scrollTo({
          left: 0,
          behavior: 'smooth'
        });
      }
    };

    const scrollPrev = () => {
      carouselContainer.scrollBy({
        left: -(scrollAmount + gapSize),
        behavior: 'smooth'
      });
    };

    const startAutoScroll = () => {
      if (scrollTime > 0) {
        autoScrollInterval = setInterval(scrollNext, scrollTime);
      }
    };

    const stopAutoScroll = () => {
      clearInterval(autoScrollInterval);
    };

    prevButton.addEventListener('click', () => {
      stopAutoScroll();
      scrollPrev();
      startAutoScroll();
    });

    nextButton.addEventListener('click', () => {
      stopAutoScroll();
      scrollNext();
      startAutoScroll();
    });

    carouselContainer.addEventListener('mouseenter', stopAutoScroll);
    carouselContainer.addEventListener('mouseleave', startAutoScroll);

    startAutoScroll();
  });
</script>

{% schema %}
{
