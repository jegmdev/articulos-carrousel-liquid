    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Espaciado Inferior (Padding)",
      "default": 50
    },
    {
      "type": "header",
      "content": "Configuración del Carrusel"
    },
